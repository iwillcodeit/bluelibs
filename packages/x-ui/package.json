{
  "name": "@redlibs/x-ui",
  "version": "1.3.0",
  "private": false,
  "description": "X-UI represents a set of standards to build scalable UI using X-Framework by BlueLibs",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluelibs/bluelibs"
  },
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w",
    "pretest": "npm run compile",
    "test": "jest --verbose dist/__tests__/index.js",
    "test:clean": "jest --clearCache",
    "test:dev": "jest --verbose --watch src/__tests__/index.ts --detectOpenHandles",
    "test:watch": "jest --verbose --watch dist/__tests__/index.js",
    "testonly": "npm test",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "prepublishOnly": "npm run compile",
    "gen-doc": "typedoc ./src/index.ts --exclude ./src/__tests__ --out typeDocs --tsconfig tsconfig.json"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT",
  "peerDependencies": {
    "@redlibs/core": "^1.2.0",
    "@redlibs/smart": "^1.0.0",
    "@redlibs/ui-apollo-bundle": "^1.0.0",
    "@redlibs/x-ui-collections-bundle": "^1.0.2",
    "@redlibs/x-ui-guardian-bundle": "^1.0.3",
    "@redlibs/x-ui-i18n-bundle": "^1.0.1",
    "@redlibs/x-ui-react-bundle": "^1.0.4",
    "@redlibs/x-ui-react-router-bundle": "^1.0.4",
    "@redlibs/x-ui-session-bundle": "^1.0.1",
    "react": "^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.4.16",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/node-polyglot": "^2.4.2",
    "@types/react": "^17.0.35",
    "@types/react-test-renderer": "^17.0.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "react-test-renderer": "^17.0.2 || ^18.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "ts-jest": "^29.0.0",
    "typescript": "5.3.3",
    "zen-observable-ts": "^1.2.5"
  }
}
